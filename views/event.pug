extends layout

include mixins/_eventForm

block content
  .inner
    .single
      h2.single--title= title
      .single__details
        .single__location 
          span= event.location.address
          p #{event.startDate} at #{event.startTime}
        .single__description
          p.bold Hosted by #{event.createdBy.username}
          p= event.description
        if user
          .row     
            if currentUserCreated
              .col.left
                a.event__button(href=`/event/${event._id}/edit` style="width: 100%") Edit
            .col.right
              a.event__button(href=`/event/${event.slug}/signup` style="width: 100%") Sign Up