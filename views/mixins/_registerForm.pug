mixin registerForm()
  form.form.card__shadow(action='/register' method='POST')
    label(for='username') Username
    input(type='text' name='username' required)
    label(for='email') Email
    input(type='email' name='email' required)
    label(for='firstName') First Name
    input(type='text' name='firstName' required)
    label(for='lastName') Last Name
    input(type='text' name='lastName' required)
    label(for='switchProfileName') Switch Profile Name
    input(type='text' name='switchProfileName' required)
    label(for='password') Password
    input(type='password' name='password' required)
    label(for='password-confirm') Confirm Password
    input(type='password' name='password-confirm' required)
    input.button(type='submit' value='Register')
    div(style='margin-top:1rem;')
      span By creating an account, you are agreeing that you have read and agree to the following:
      br
      ul
        li
          a.link(href='/privacy') Privacy Policy
        li
          a.link(href='/terms') Terms of Service